# syntax=docker/dockerfile:1
# Используем базовый образ с Go для сборки бэкенд-сервера
FROM golang:1.16-alpine

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем исходный код бэкенд-сервера в контейнер
COPY . .

# Собираем бэкенд-сервер
RUN go build -o main .

# Указываем порт, на котором будет работать бэкенд-сервер
EXPOSE 8080

# Команда для запуска бэкенд-сервера в контейнере
CMD ["./main"]
